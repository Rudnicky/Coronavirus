<resources>

    <!-- Base application theme. -->
    <style name="AppMaterialTheme" parent="AppTheme">
        <!-- Customise your theme here -->

    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MainToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@android:color/white</item> <!-- Text color of Toolbar Title -->
        <item name="android:textColorSecondary">@color/colorAccent</item> <!-- Icon color of the Toolbar -->
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="HeaderStyle" parent="@style/Widget.AppCompat.TextView">
        <item name="android:textSize">20sp</item>
        <item name="fontWeight">500</item>
    </style>

    <style name="PrimaryTextStyle" parent="@style/Widget.AppCompat.TextView">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="BriefDescriptionTextStyle" parent="@style/Widget.AppCompat.TextView">
        <item name="android:textSize">12sp</item>
    </style>

</resources>
